@model Corkboard.Models.ServerInviteViewModel

@{
    ViewData["Title"] = "Create Invite";
}

<div class="section-spacing">
    <h1>Create Invite</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card card-purple">
                <div class="card-header">
                    <h4 class="mb-0">Invite Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="ServerId" class="control-label">Server</label>
                            <select asp-for="ServerId" class="form-control" asp-items="@(ViewBag.Servers as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)">
                                <option value="">-- Select a Server --</option>
                            </select>
                            <span asp-validation-for="ServerId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Username" class="control-label">Invite Specific User (Optional)</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                            <small class="form-text text-muted">Leave blank to create a general invite</small>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <input asp-for="Expires" id="expiresToggle" class="form-check-input" />
                                <label asp-for="Expires" class="form-check-label">Set Expiration Date</label>
                            </div>
                            <span asp-validation-for="Expires" class="text-danger"></span>
                        </div>

                        <div class="form-group" id="expiresPicker" style="display:none;">
                            <label asp-for="ExpiresAt" class="control-label">Expiration Date</label>
                            <input asp-for="ExpiresAt" class="form-control" type="date" />
                            <span asp-validation-for="ExpiresAt" class="text-danger"></span>
                            <small class="form-text text-muted">After this date, the invite cannot be used</small>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <input asp-for="OneTimeUse" class="form-check-input" />
                                <label asp-for="OneTimeUse" class="form-check-label">One-Time Use Only</label>
                            </div>
                            <span asp-validation-for="OneTimeUse" class="text-danger"></span>
                            <small class="form-text text-muted">If checked, the invite can only be used once</small>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-purple btn-lg w-100">
                                <i class="bi bi-envelope-plus"></i> Create Invite
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-purple">
                    <i class="bi bi-arrow-left"></i> Back to Invites
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var expiresToggle = document.getElementById('expiresToggle');
            var expiresPicker = document.getElementById('expiresPicker');

            // Set initial visibility based on the checkbox state
            expiresPicker.style.display = expiresToggle.checked ? 'block' : 'none';

            // Add event listener to toggle visibility
            expiresToggle.addEventListener('change', function() {
                if (this.checked) {
                    expiresPicker.style.display = 'block';
                } else {
                    expiresPicker.style.display = 'none';
                    expiresPicker.querySelector('input').value = ''; // Clear the date input when hiding
                }
            });

            var oneTimeUseCheckbox = document.getElementById('OneTimeUse');
            var usernameInput = document.getElementById('Username');

            // Disable oneTimeUse if a username is specified
            usernameInput.addEventListener('input', function() {
                if (this.value.trim() !== '') {
                    oneTimeUseCheckbox.checked = true;
                    oneTimeUseCheckbox.disabled = true;
                } else {
                    oneTimeUseCheckbox.disabled = false;
                }
            });
        });
    </script>
}
