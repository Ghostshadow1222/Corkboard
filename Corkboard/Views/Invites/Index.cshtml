@using Corkboard.Models
@model IEnumerable<ServerInvite>

@{
    ViewData["Title"] = "My Invites";
}

@* List all of the invites you've created *@
<h1>@ViewData["Title"]</h1>

@* Table showing invite codes, servers, dates, and statuses *@
<table class="table table-striped" id="invitesTable" style="margin-top:1rem;">
    <thead>
        <tr>
            <th>Code</th>
            <th>Server</th>
            <th>Created At (UTC)</th>
            <th>Expires At (UTC)</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @* Loop through and display each invite *@
        @foreach (var invite in Model ?? Enumerable.Empty<ServerInvite>())
        {
            @* Determine if the invite is still active *@
            var isUsed = invite.IsUsed || (invite.ExpiresAt != null && invite.ExpiresAt < DateTime.UtcNow);
            <tr>
                <td>@invite.InviteCode</td>
                <td>@(invite.Server?.Name ?? invite.ServerId.ToString())</td>
                <td>@(invite.CreatedAt.ToString("yyyy-MM-dd HH:mm"))</td>
                <td>@(invite.ExpiresAt?.ToString("yyyy-MM-dd HH:mm") ?? "â€”")</td>
                <td>
                    @* Show the current status of the invite *@
                    @if (invite.IsUsed)
                    {
                        <span class="text-muted">Used</span>
                    }
                    else if (invite.ExpiresAt != null && invite.ExpiresAt < DateTime.UtcNow)
                    {
                        <span class="text-warning">Expired</span>
                    }
                    else
                    {
                        <span class="text-success">Active</span>
                    }
                </td>
                @* Link to view the full details of this invite *@
                <td>
                    <a asp-action="Details" asp-controller="Invites" asp-route-id="@invite.Id" class="btn btn-sm btn-outline-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>