@using Corkboard.Models
@model IEnumerable<ServerInvite>

@{
    ViewData["Title"] = "My Invites";
}

<div class="section-spacing">
    <h1>@ViewData["Title"]</h1>

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-purple">
            <i class="bi bi-plus-circle"></i> Create New Invite
        </a>
    </div>

    @if (Model?.Any() == true)
    {
        <div class="card card-purple">
            <div class="card-body">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Server</th>
                            <th>Created At (UTC)</th>
                            <th>Expires At (UTC)</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invite in Model)
                        {
                            var isUsed = invite.IsUsed || (invite.ExpiresAt != null && invite.ExpiresAt < DateTime.UtcNow);
                            <tr>
                                <td>
                                    <code class="text-purple">@invite.InviteCode</code>
                                </td>
                                <td>
                                    <strong>@(invite.Server?.Name ?? invite.ServerId.ToString())</strong>
                                </td>
                                <td>@(invite.CreatedAt.ToString("yyyy-MM-dd HH:mm"))</td>
                                <td>@(invite.ExpiresAt?.ToString("yyyy-MM-dd HH:mm") ?? "â€”")</td>
                                <td>
                                    @if (invite.IsUsed)
                                    {
                                        <span class="badge bg-secondary">Used</span>
                                    }
                                    else if (invite.ExpiresAt != null && invite.ExpiresAt < DateTime.UtcNow)
                                    {
                                        <span class="badge bg-warning text-dark">Expired</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-green">Active</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-controller="Invites" asp-route-id="@invite.Id" class="btn btn-sm btn-outline-purple">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No invites yet!</h4>
            <p>You haven't created any invites. Create one to invite others to your servers.</p>
            <a asp-action="Create" class="btn btn-purple mt-2">
                <i class="bi bi-plus-circle"></i> Create Your First Invite
            </a>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Servers" asp-action="Index" class="btn btn-outline-purple">
            <i class="bi bi-arrow-left"></i> Back to Servers
        </a>
    </div>
</div>

<style>
    .text-purple {
        color: #6f42c1;
    }
</style>