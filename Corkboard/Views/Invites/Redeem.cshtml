@model Corkboard.Models.ServerInvite

@{
    ViewData["Title"] = "Redeem Invite";
}

<div class="section-spacing">
    <div class="row justify-content-center" style="min-height: 60vh; align-items: center;">
        <div class="col-md-6 col-lg-5">
            <div class="card card-purple shadow-lg">
                <div class="card-body text-center p-5">
                    <div class="mb-4" style="color: #6f42c1;">
                        <i class="bi bi-envelope-open" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h2 class="mb-3">@Model.Server.Name</h2>
                    
                    @if (!string.IsNullOrEmpty(Model.Server.Description))
                    {
                        <p class="text-muted mb-4">@Model.Server.Description</p>
                    }

                    <div class="card bg-light mb-4 p-3">
                        <div class="mb-2">
                            <strong>Invite Code:</strong>
                            <code class="d-block mt-1" style="color: #6f42c1; font-size: 1.2rem;">@Model.InviteCode</code>
                        </div>
                        
                        @if (Model.ExpiresAt != null)
                        {
                            <div class="text-muted" style="font-size: 0.9rem;">
                                <i class="bi bi-clock"></i> Expires: @Model.ExpiresAt?.ToLocalTime().ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </div>
                        }
                        
                        @if (Model.OneTimeUse)
                        {
                            <div class="mt-2">
                                <span class="badge badge-purple">One-Time Use</span>
                            </div>
                        }
                    </div>

                    <form asp-action="Redeem" asp-controller="Invites" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-purple btn-lg w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Join @Model.Server.Name
                        </button>
                    </form>

                    <div class="mt-4">
                        <p class="text-muted mb-2" style="font-size: 0.9rem;">
                            <i class="bi bi-info-circle"></i> By joining, you'll become a member of this server
                        </p>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Servers" asp-action="Index" class="btn btn-outline-purple">
                    <i class="bi bi-arrow-left"></i> Back to Servers
                </a>
            </div>
        </div>
    </div>
</div>