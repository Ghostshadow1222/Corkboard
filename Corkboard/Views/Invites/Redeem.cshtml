@model Corkboard.Models.ServerInvite

@{
    ViewData["Title"] = "Redeem Invite";
}

@if (ViewBag.AlreadyMember == true)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle-fill"></i> You are already a member of this server.
    </div>
}

<div class="section-spacing d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card card-purple shadow-sm text-center">
            <div class="card-header">
                <h3 class="mb-0 text-white">Join Server</h3>
            </div>
            <div class="card-body py-4">
                <h2 class="mb-2">@Model.Server.Name</h2>
                <p class="text-muted">@Model.Server.Description</p>

                <div class="mb-3">
                    <div>Invite Code: <strong>@Model.InviteCode</strong></div>
                    @if (Model.ExpiresAt != null)
                    {
                        <div>Expires: @Model.ExpiresAt?.ToLocalTime().ToString("g")</div>
                    }
                    else
                    {
                        <div>Expires: Never</div>
                    }
                </div>

                <form asp-action="Redeem" asp-controller="Invites" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-purple btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Join
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>