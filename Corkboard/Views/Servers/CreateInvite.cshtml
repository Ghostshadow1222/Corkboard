@model Corkboard.Models.ServerInviteViewModel

@{
    ViewData["Title"] = "Create Invite";
}

@* Page header for creating a new server invite *@
<h1>Create Invite for @ViewBag.ServerName</h1>

@* Form for generating a new invite to a server *@
<h4>Invite Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Submit form to create the invite *@
        <form asp-action="CreateInvite" asp-route-serverId="@Model.ServerId">
            @* Display any validation errors *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Hidden field for ServerId *@
            <input type="hidden" asp-for="ServerId" />

            @* Specify who to invite (by username) *@
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Leave blank for anyone" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            @* Toggle whether the invite has an expiration date *@
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Expires" id="expiresToggle" class="form-check-input" />
                    <label asp-for="Expires" class="form-check-label">Expires</label>
                </div>
                <span asp-validation-for="Expires" class="text-danger"></span>
            </div>

            @* Date picker for when the invite expires (shown when toggle is enabled) *@
            <div class="form-group" id="expiresPicker" style="display:none;">
                <label asp-for="ExpiresAt" class="control-label"></label>
                <input asp-for="ExpiresAt" class="form-control" type="date" />
                <span asp-validation-for="ExpiresAt" class="text-danger"></span>
            </div>

            @* Toggle to make this invite usable only once *@
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="OneTimeUse" class="form-check-input" />
                    <label asp-for="OneTimeUse" class="form-check-label"></label>
                </div>
                <span asp-validation-for="OneTimeUse" class="text-danger"></span>
            </div>

            @* Submit button to create the invite *@
            <div class="form-group">
                <input type="submit" value="Create Invite" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@* Link back to the invites list *@
<div>
    <a asp-action="Invites" asp-route-serverId="@Model.ServerId">Back to Invites</a>
</div>

@* Include validation scripts and toggle script for expiry date picker *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var expiresToggle = document.getElementById('expiresToggle');
            var expiresPicker = document.getElementById('expiresPicker');

            // Set initial visibility based on the checkbox state
            expiresPicker.style.display = expiresToggle.checked ? 'block' : 'none';

            // Add event listener to toggle visibility
            expiresToggle.addEventListener('change', function() {
                if (this.checked) {
                    expiresPicker.style.display = 'block';
                } else {
                    expiresPicker.style.display = 'none';
                    expiresPicker.querySelector('input').value = ''; // Clear the date input when hiding
                }
            });

            var oneTimeUseCheckbox = document.getElementById('OneTimeUse');
            var usernameInput = document.getElementById('Username');

            // Disable oneTimeUse if a username is specified
            usernameInput.addEventListener('input', function() {
                if (this.value.trim() !== '') {
                    oneTimeUseCheckbox.checked = true;
                    oneTimeUseCheckbox.disabled = true;
                } else {
                    oneTimeUseCheckbox.disabled = false;
                }
            });
        });
    </script>
}
