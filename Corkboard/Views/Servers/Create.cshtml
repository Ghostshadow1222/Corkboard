@model Corkboard.Models.ServerViewModel

@{
    ViewData["Title"] = "Create Server";
}

<div class="section-spacing">
    <h1>Create Server</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong> @TempData["ErrorMessage"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card card-purple">
                <div class="card-header">
                    <h4 class="mb-0">Server Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Server Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter server name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="IconUrl" class="control-label">Icon URL</label>
                            <input asp-for="IconUrl" class="form-control" placeholder="https://example.com/icon.png" />
                            <span asp-validation-for="IconUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Optional: Provide a URL to an icon image for your server</small>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="What's your server about?"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="form-text text-muted">Optional: Tell others what your server is for</small>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-purple btn-lg w-100">
                                <i class="bi bi-plus-circle"></i> Create Server
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-purple">
                    <i class="bi bi-arrow-left"></i> Back to Servers
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
