@model Corkboard.Models.ServerViewModel

@{
    ViewData["Title"] = "Create";
}

@* Page header for server creation *@
<h1>Create</h1>

@* Display any error messages that came back from the server *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["ErrorMessage"]
    </div>
}

@* Form for creating a new server with basic details *@
<h4>Server</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Post the form data back to the Create action *@
        <form asp-action="Create">
            @* Show validation errors if the model isn't valid *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @* Server name field *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            @* URL for the server's icon image *@
            <div class="form-group">
                <label asp-for="IconUrl" class="control-label"></label>
                <input asp-for="IconUrl" class="form-control" />
                <span asp-validation-for="IconUrl" class="text-danger"></span>
            </div>
            
            @* Optional description of what the server is about *@
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            @* Submit button to create the server *@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@* Link back to the main servers list *@
<div>
    <a asp-action="Index">Back to List</a>
</div>

@* Include client-side validation scripts *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
