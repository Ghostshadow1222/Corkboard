@model Corkboard.Models.Channel

@{
    ViewData["Title"] = "Delete Channel";
}

@* Page header for channel deletion *@
<h1>Delete Channel</h1>
<h4>@ViewBag.ServerName</h4>

<h3 class="text-danger">Are you sure you want to delete this channel?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Channel Name
        </dt>
        <dd class="col-sm-10">
            #@Model.Name
        </dd>
        <dt class="col-sm-2">
            Created
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToString("g") UTC
        </dd>
    </dl>
    
    <div class="alert alert-warning">
        <strong>Warning!</strong> This action cannot be undone. All messages in this channel will be permanently deleted.
    </div>
    
    @* Confirmation form to delete the channel *@
    <form asp-action="DeleteChannel" asp-route-serverId="@Model.ServerId" asp-route-id="@Model.Id">
        <input type="submit" value="Delete Channel" class="btn btn-danger" />
        <a asp-action="Channels" asp-route-serverId="@Model.ServerId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
