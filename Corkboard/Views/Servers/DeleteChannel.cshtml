@model Corkboard.Models.Channel

@{
    ViewData["Title"] = "Delete Channel";
}

<div class="section-spacing">
    <h1>Delete Channel</h1>
    <h3 class="fw-light text-muted">@ViewBag.ServerName</h3>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger">
                <h3 class="text-danger mb-3"><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this channel?</h3>
                <p class="mb-0">This action cannot be undone. All messages in this channel will be permanently deleted.</p>
            </div>
            
            <div class="card card-purple">
                <div class="card-header">
                    <h4 class="mb-0 text-white">Channel Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Channel Name</dt>
                        <dd class="col-sm-8">#@Model.Name</dd>
                        
                        <dt class="col-sm-4">Created</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("g") UTC</dd>
                    </dl>
                </div>
            </div>
            
            <div class="mt-4">
                <form asp-action="DeleteChannel" asp-route-serverId="@Model.ServerId" asp-route-id="@Model.Id" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash-fill"></i> Delete Channel
                    </button>
                </form>
                <a asp-action="Channels" asp-route-serverId="@Model.ServerId" class="btn btn-outline-purple btn-lg ms-2">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
