@model Corkboard.Models.ServerInvite

@{
    ViewData["Title"] = "Delete Invite";
}

@* Page header for invite deletion *@
<h1>Delete Invite</h1>
<h4>@ViewBag.ServerName</h4>

<h3 class="text-danger">Are you sure you want to delete this invite?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Invite Code
        </dt>
        <dd class="col-sm-10">
            @Model.InviteCode
        </dd>
        <dt class="col-sm-2">
            Created
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToString("g") UTC
        </dd>
        <dt class="col-sm-2">
            Expires
        </dt>
        <dd class="col-sm-10">
            @(Model.ExpiresAt?.ToString("g") ?? "Never")
        </dd>
        <dt class="col-sm-2">
            Times Used
        </dt>
        <dd class="col-sm-10">
            @Model.TimesUsed
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsUsed)
            {
                <span class="text-muted">Used</span>
            }
            else if (Model.ExpiresAt != null && Model.ExpiresAt < DateTime.UtcNow)
            {
                <span class="text-warning">Expired</span>
            }
            else
            {
                <span class="text-success">Active</span>
            }
        </dd>
    </dl>
    
    <div class="alert alert-info">
        <strong>Note:</strong> Deleting this invite will revoke access for anyone who has not yet used it.
    </div>
    
    @* Confirmation form to delete the invite *@
    <form asp-action="DeleteInvite" asp-route-serverId="@Model.ServerId" asp-route-id="@Model.Id">
        <input type="submit" value="Delete Invite" class="btn btn-danger" />
        <a asp-action="Invites" asp-route-serverId="@Model.ServerId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
