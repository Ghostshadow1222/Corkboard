@model Corkboard.Models.ServerInvite

@{
    ViewData["Title"] = "Delete Invite";
}

<div class="section-spacing">
    <h1>Delete Invite</h1>
    <p class="lead text-muted">@ViewBag.ServerName</p>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger">
                <h3 class="text-danger mb-3"><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this invite?</h3>
                <p class="mb-0">Deleting this invite will revoke access for anyone who has not yet used it.</p>
            </div>

            <div class="card card-purple">
                <div class="card-header">
                    <h4 class="mb-0 text-white">Invite Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Invite Code</dt>
                        <dd class="col-sm-8"><code>@Model.InviteCode</code></dd>

                        <dt class="col-sm-4">Created</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("g") UTC</dd>

                        <dt class="col-sm-4">Expires</dt>
                        <dd class="col-sm-8">@(Model.ExpiresAt?.ToString("g") ?? "Never")</dd>

                        <dt class="col-sm-4">Times Used</dt>
                        <dd class="col-sm-8">@Model.TimesUsed</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsUsed)
                            {
                                <span class="text-muted">Used</span>
                            }
                            else if (Model.ExpiresAt != null && Model.ExpiresAt < DateTime.UtcNow)
                            {
                                <span class="text-warning">Expired</span>
                            }
                            else
                            {
                                <span class="text-success">Active</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                <form asp-action="DeleteInvite" asp-route-serverId="@Model.ServerId" asp-route-id="@Model.Id" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash-fill"></i> Delete Invite
                    </button>
                </form>
                <a asp-action="Invites" asp-route-serverId="@Model.ServerId" class="btn btn-outline-purple btn-lg ms-2">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
