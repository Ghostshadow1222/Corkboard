@model Corkboard.Models.ViewModels.ServersController.ServerFormViewModel

@{
    ViewData["Title"] = "Edit Server";
}

@* Page header for server editing *@
<h1>Edit Server</h1>

@* Display any error messages *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@* Form for editing server details *@
<h4>Server Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Post the form data back to the Edit action *@
        <form asp-action="Edit" asp-route-id="@Model.Id">
            @* Show validation errors if the model isn't valid *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @* Hidden field for ID *@
            <input type="hidden" asp-for="Id" />
            
            @* Server name field *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            @* URL for the server's icon image *@
            <div class="form-group">
                <label asp-for="IconUrl" class="control-label"></label>
                <input asp-for="IconUrl" class="form-control" />
                <span asp-validation-for="IconUrl" class="text-danger"></span>
            </div>
            
            @* Optional description of what the server is about *@
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            @* Privacy level dropdown *@
            <div class="form-group">
                <label asp-for="PrivacyLevel" class="control-label"></label>
                <select asp-for="PrivacyLevel" class="form-control" asp-items="Html.GetEnumSelectList<Corkboard.Models.PrivacyLevel>()"></select>
                <span asp-validation-for="PrivacyLevel" class="text-danger"></span>
            </div>
            
            @* Submit button to update the server *@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@* Link back to the server channels *@
<div>
    <a asp-action="Channels" asp-route-serverId="@Model.Id">Back to Server</a>
</div>

@* Include client-side validation scripts *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
