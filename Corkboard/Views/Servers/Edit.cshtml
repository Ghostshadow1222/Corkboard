@model Corkboard.Models.ViewModels.ServersController.ServerViewModel

@{
    ViewData["Title"] = "Edit Server";
}

<div class="section-spacing">
    <h1>Edit Server</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong> @TempData["ErrorMessage"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card card-purple">
                <div class="card-header">
                    <h4 class="mb-0 text-white">Server Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Server Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter server name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="IconUrl" class="control-label">Icon URL</label>
                            <input asp-for="IconUrl" class="form-control" placeholder="https://example.com/icon.png" />
                            <span asp-validation-for="IconUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Optional: Provide a URL to an icon image</small>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="What's your server about?"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="PrivacyLevel" class="control-label">Privacy Level</label>
                            <select asp-for="PrivacyLevel" class="form-control" asp-items="Html.GetEnumSelectList<Corkboard.Models.PrivacyLevel>()"></select>
                            <span asp-validation-for="PrivacyLevel" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-purple btn-lg w-100">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-3 border-danger">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="text-danger mb-1">Delete this server</h5>
                        <p class="mb-0 text-muted">This action permanently removes the server and its data.</p>
                    </div>
                    <a asp-action="Delete" asp-route-serverId="@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
            
            <div class="mt-3">
                <a asp-action="Channels" asp-route-serverId="@Model.Id" class="btn btn-outline-purple">
                    <i class="bi bi-arrow-left"></i> Back to Server
                </a>
            </div>
        </div>
    </div>
</div>

@* Include client-side validation scripts *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
