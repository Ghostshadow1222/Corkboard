@model IEnumerable<Corkboard.Models.Channel>

@{
    ViewData["Title"] = "Manage Channels";
}

<div class="section-spacing">
    <h1>Manage Channels</h1>
    <p class="lead text-muted">@ViewBag.ServerName</p>

    <div class="mb-4">
        <a asp-action="CreateChannel" asp-route-serverId="@ViewBag.ServerId" class="btn btn-purple">
            <i class="bi bi-plus-circle"></i> Create New Channel
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-hover table-striped table-fixed">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Created At (UTC)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var channel in Model)
                {
                    <tr>
                        <td class="truncate"><strong>#@channel.Name</strong></td>
                        <td>@(channel.CreatedAt.ToString("yyyy-MM-dd HH:mm"))</td>
                        <td>
                            <a asp-action="EditChannel" asp-route-serverId="@ViewBag.ServerId" asp-route-id="@channel.Id" class="btn btn-sm btn-outline-purple">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="DeleteChannel" asp-route-serverId="@ViewBag.ServerId" asp-route-id="@channel.Id" class="btn btn-sm btn-outline-danger ms-1">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No channels found!</h4>
            <p>Create a channel to get started with conversations.</p>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Channels" asp-route-serverId="@ViewBag.ServerId" class="btn btn-outline-purple">
            <i class="bi bi-arrow-left"></i> Back to Server
        </a>
    </div>
</div>
