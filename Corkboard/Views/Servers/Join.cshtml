@model Server

@{
    ViewData["Title"] = "Join Server";
    bool canJoin = Model != null && Model.PrivacyLevel == PrivacyLevel.Public;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    @if (canJoin)
                    {
                        <div class="text-success mb-4">
                            <i class="bi bi-check-circle-fill" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="card-title mb-3">You can join this server!</h3>
                        <p class="text-muted mb-4">@Model?.Name</p>
                        <button type="button" class="btn btn-primary btn-lg">Join</button>
                    }
                    else
                    {
                        <div class="text-danger mb-4">
                            <i class="bi bi-x-circle-fill" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="card-title mb-3">Unable to join this server</h3>
                        <p class="text-muted">Please join via an invite link.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>