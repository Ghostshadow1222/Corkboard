@model Server

@{
    ViewData["Title"] = "Join Server";
    bool canJoin = Model != null && Model.PrivacyLevel == PrivacyLevel.Public;
    bool noServerSpecified = Model == null;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    @if (canJoin)
                    {
                        <div class="text-success mb-4">
                            <i class="bi bi-check-circle-fill" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="card-title mb-3">Join this server?</h3>
                        <p class="text-muted mb-4">@Model?.Name</p>
                        <form asp-action="Join" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-purple btn-lg w-100">
                                <i class="bi bi-box-arrow-in-right"></i> Join Server
                            </button>
                        </form>
                    }
                    else if (noServerSpecified)
                    {
                        <form asp-action="Redeem" asp-controller="Invites" method="get">
                            <div class="form-group mb-4">
                                <label for="inviteCode" class="form-label">Enter Invite Code</label>
                                <input type="text" class="form-control" id="inviteCode" name="code" placeholder="Invite Code" required />
                            </div>
                            <button type="submit" class="btn btn-purple btn-lg w-100">
                                <i class="bi bi-arrow-right-circle"></i> Redeem Invite
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-danger mb-4">
                            <i class="bi bi-x-circle-fill" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="card-title mb-3">Unable to join this server</h3>
                        <p class="text-muted">Please join via an invite link.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>