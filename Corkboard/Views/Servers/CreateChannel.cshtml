@model Corkboard.Models.ViewModels.ServersController.ChannelFormViewModel

@{
    ViewData["Title"] = "Create Channel";
}

<div class="section-spacing">
    <h1>Create Channel</h1>
    <p class="lead text-muted">@ViewBag.ServerName</p>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card card-purple">
                <div class="card-header">
                    <h4 class="mb-0">Channel Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateChannel" asp-route-serverId="@Model.ServerId">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="ServerId" />
                        
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Channel Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., general, announcements" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <small class="form-text text-muted">Choose a descriptive name for your channel</small>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-purple btn-lg w-100">
                                <i class="bi bi-plus-circle"></i> Create Channel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="mt-3">
                <a asp-action="Channels" asp-route-serverId="@Model.ServerId" class="btn btn-outline-purple">
                    <i class="bi bi-arrow-left"></i> Back to Server
                </a>
            </div>
        </div>
    </div>
</div>

@* Include client-side validation scripts *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
