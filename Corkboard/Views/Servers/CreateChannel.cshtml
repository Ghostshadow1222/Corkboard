@model Corkboard.Models.ViewModels.ServersController.ChannelFormViewModel

@{
    ViewData["Title"] = "Create Channel";
}

@* Page header for channel creation *@
<h1>Create Channel</h1>
<h4>@ViewBag.ServerName</h4>
<hr />

@* Form for creating a new channel *@
<div class="row">
    <div class="col-md-4">
        @* Post the form data back to the CreateChannel action *@
        <form asp-action="CreateChannel" asp-route-serverId="@Model.ServerId">
            @* Show validation errors if the model isn't valid *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @* Hidden field for ServerId *@
            <input type="hidden" asp-for="ServerId" />
            
            @* Channel name field *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., general, announcements" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            @* Submit button to create the channel *@
            <div class="form-group">
                <input type="submit" value="Create Channel" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@* Link back to the server channels *@
<div>
    <a asp-action="Channels" asp-route-serverId="@Model.ServerId">Back to Server</a>
</div>

@* Include client-side validation scripts *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
