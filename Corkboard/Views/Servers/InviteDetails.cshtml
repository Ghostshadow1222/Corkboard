@model Corkboard.Models.ServerInvite
@{
    ViewData["Title"] = "Invite Details";
}

<div class="section-spacing">
    <h1>Invite Details</h1>
    <p class="lead text-muted">@ViewBag.ServerName</p>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-purple">
                <div class="card-header">
                    <h4 class="mb-0 text-white">Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Invite Code</dt>
                        <dd class="col-sm-8"><code>@Model.InviteCode</code></dd>

                        <dt class="col-sm-4">Server</dt>
                        <dd class="col-sm-8">@Model.Server.Name</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("g") UTC</dd>

                        <dt class="col-sm-4">Expires</dt>
                        <dd class="col-sm-8">@(Model.ExpiresAt?.ToString("g") ?? "Never")</dd>

                        <dt class="col-sm-4">Current Uses</dt>
                        <dd class="col-sm-8">@Model.TimesUsed</dd>

                        <dt class="col-sm-4">One Time Use</dt>
                        <dd class="col-sm-8">@(Model.OneTimeUse ? "Yes" : "No")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsUsed)
                            {
                                <span class="text-muted">Used</span>
                            }
                            else if (Model.ExpiresAt != null && Model.ExpiresAt < DateTime.UtcNow)
                            {
                                <span class="text-warning">Expired</span>
                            }
                            else
                            {
                                <span class="text-success">Active</span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.InvitedUserId))
                        {
                            <dt class="col-sm-4">Invited User</dt>
                            <dd class="col-sm-8">@Model.InvitedUserId</dd>
                        }
                    </dl>
                </div>
            </div>

            <div class="mt-4 d-flex flex-wrap gap-2">
                <a asp-action="Invites" asp-route-serverId="@Model.ServerId" class="btn btn-outline-purple">
                    <i class="bi bi-arrow-left"></i> Back to Invites
                </a>
                <a asp-action="DeleteInvite" asp-route-serverId="@Model.ServerId" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Invite
                </a>
                <a href="@Url.Action("Redeem", "Invites", new { code = Model.InviteCode })" class="btn btn-purple">
                    <i class="bi bi-share"></i> Share Link
                </a>
            </div>
        </div>
    </div>
</div>
