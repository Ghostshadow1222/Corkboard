@using Corkboard.Models
@model IEnumerable<ServerInvite>

@{
    ViewData["Title"] = "Server Invites";
}

<div class="section-spacing">
    <h1>Invites</h1>
    <p class="lead text-muted">@ViewBag.ServerName</p>

    <div class="mb-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
        <a asp-action="Channels" asp-route-serverId="@ViewBag.ServerId" class="btn btn-outline-purple">
            <i class="bi bi-arrow-left"></i> Back to Server
        </a>
        <a asp-action="CreateInvite" asp-route-serverId="@ViewBag.ServerId" class="btn btn-purple">
            <i class="bi bi-link-45deg"></i> Create New Invite
        </a>
    </div>

    <div class="table-responsive" style="max-height: 500px;">
        <table class="table table-hover table-striped align-middle mb-0 table-fixed" id="invitesTable">
            <thead class="table-light" style="position: sticky; top: 0; z-index: 10;">
                <tr>
                    <th>Code</th>
                    <th>Created By</th>
                    <th>Created At (UTC)</th>
                    <th>Expires At (UTC)</th>
                    <th>Uses</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invite in Model ?? Enumerable.Empty<ServerInvite>())
                {
                    <tr>
                        <td class="truncate"><code>@invite.InviteCode</code></td>
                        <td>@(invite.CreatedBy?.UserName ?? invite.CreatedById)</td>
                        <td>@invite.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@(invite.ExpiresAt?.ToString("yyyy-MM-dd HH:mm") ?? "â€”")</td>
                        <td>@invite.TimesUsed @(invite.OneTimeUse ? "(one-time)" : "")</td>
                        <td>
                            @if (invite.IsUsed)
                            {
                                <span class="badge bg-secondary">Used</span>
                            }
                            else if (invite.ExpiresAt != null && invite.ExpiresAt < DateTime.UtcNow)
                            {
                                <span class="badge bg-warning text-dark">Expired</span>
                            }
                            else
                            {
                                <span class="badge badge-green">Active</span>
                            }
                        </td>
                        <td>
                            <a asp-action="InviteDetails" asp-route-serverId="@ViewBag.ServerId" asp-route-id="@invite.Id" class="btn btn-sm btn-outline-purple">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

