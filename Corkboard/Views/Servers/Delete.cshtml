@model Corkboard.Models.Server

@{
    ViewData["Title"] = "Delete Server";
}

@* Page header for server deletion *@
<h1>Delete Server</h1>

<h3 class="text-danger">Are you sure you want to delete this server?</h3>
<div>
    <h4>Server Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Server Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @(Model.Description ?? "No description")
        </dd>
        <dt class="col-sm-2">
            Members
        </dt>
        <dd class="col-sm-10">
            @Model.MemberCount
        </dd>
        <dt class="col-sm-2">
            Privacy Level
        </dt>
        <dd class="col-sm-10">
            @Model.PrivacyLevel
        </dd>
    </dl>
    
    <div class="alert alert-warning">
        <strong>Warning!</strong> This action cannot be undone. All channels, messages, and invites will be permanently deleted.
    </div>
    
    @* Confirmation form to delete the server *@
    <form asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Delete Server" class="btn btn-danger" />
        <a asp-action="Channels" asp-route-serverId="@Model.Id" class="btn btn-secondary">Cancel</a>
    </form>
</div>
