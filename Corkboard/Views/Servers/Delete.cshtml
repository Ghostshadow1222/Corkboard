@model Corkboard.Models.Server

@{
    ViewData["Title"] = "Delete Server";
}

<div class="section-spacing">
    <h1>Delete Server</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger">
                <h3 class="text-danger mb-3"><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this server?</h3>
                <p class="mb-0">This action cannot be undone. All channels, messages, and invites will be permanently deleted.</p>
            </div>
            
            <div class="card card-purple">
                <div class="card-header">
                    <h4 class="mb-0 text-white">Server Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Server Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        
                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@(Model.Description ?? "No description")</dd>
                        
                        <dt class="col-sm-4">Members</dt>
                        <dd class="col-sm-8"><span class="badge badge-purple">@Model.MemberCount members</span></dd>
                        
                        <dt class="col-sm-4">Privacy Level</dt>
                        <dd class="col-sm-8">@Model.PrivacyLevel</dd>
                    </dl>
                </div>
            </div>
            
            <div class="mt-4">
                <form asp-action="Delete" asp-route-id="@Model.Id" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash-fill"></i> Delete Server
                    </button>
                </form>
                <a asp-action="Channels" asp-route-serverId="@Model.Id" class="btn btn-outline-purple btn-lg ms-2">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
